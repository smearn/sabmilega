{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client"]
  },
  "include": ["index.tsx", "App.tsx", "firebase.ts", "i18n.ts", "types.ts", "utils.ts", "components"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "vite.config.d.ts", "tsconfig.node.json"],
  "references": [{ "path": "./tsconfig.node.json" }]
}